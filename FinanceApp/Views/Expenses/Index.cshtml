@model IEnumerable<FinanceApp.Models.Expense>

<h2>My Expenses</h2>


<!-- 🔽 Month Dropdown Filter -->
<form asp-action="Index" method="get" class="mb-3">
    <label for="monthSelect">Select Month:</label>
    <select id="monthSelect" name="selectedMonth" class="form-select w-auto d-inline" onchange="this.form.submit()">
        <option value="@DateTime.Now.ToString("yyyy-MM")" selected="@(ViewBag.SelectedMonth == null)">-- Current Month --</option>
        @foreach (var month in (List<SelectListItem>)ViewBag.Months)
        {
            <option value="@month.Value" selected="@month.Selected">@month.Text</option>
        }
    </select>
</form>

<div class="mb-3">

    <a class="btn btn-primary mb-3" asp-controller="Expenses" asp-action="Create" target="_blank">
        <i class="bi bi-plus-circle"></i> Create Expense
    </a>

</div>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Description</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
                <th style="width: 150px;">Delete Expense</th> 
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>$@item.Amount</td>
                    <td>@item.Category</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="margin: 0;" onsubmit="return confirm('Are you sure you want to delete this expense?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<h2>Expenses Overview</h2>
<div>
    <canvas style="max-width: 450px; max-height:450px;" id="myChart"></canvas>
</div>

<div class="alert alert-info mt-4 w-50">
    <h5>Total Expenses for @ViewBag.SelectedMonth: <strong>$@ViewBag.MonthlyTotal</strong></h5>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const monthSelect = document.getElementById('monthSelect');

    function loadChart(month, year) {
        const ctx = document.getElementById('myChart');
        if (!ctx) return;

        fetch(`/Expenses/GetChart?month=${month}&year=${year}`)
            .then(response => response.json())
            .then(data => {
                new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: data.map(d => d.category),
                        datasets: [{
                            data: data.map(d => d.total),
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.6)',
                                'rgba(54, 162, 235, 0.6)',
                                'rgba(255, 206, 86, 0.6)',
                                'rgba(75, 192, 192, 0.6)',
                                'rgba(153, 102, 255, 0.6)',
                                'rgba(255, 159, 64, 0.6)'
                            ]
                        }]
                    }
                });
            });
    }


    // On page load
    const selectedValue = monthSelect.value;
    if (selectedValue.includes('-')) {
        const [year, month] = selectedValue.split('-');
        loadChart(month, year);
    }

    // On dropdown change
    monthSelect.addEventListener('change', function () {
        const val = this.value;
        if (val.includes('-')) {
            const [year, month] = val.split('-');
            loadChart(month, year);
        }
    });

</script>
